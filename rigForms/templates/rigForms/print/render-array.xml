<blockTable colWidths="{{currentIndent}},100%" alignment="left" style="objectTable">
<tr>
	<td></td>
    <td><h1>{{field.title}}</h1></td>
</tr>
</blockTable>

{% autoescape off %}

{% for child in children %}
	{{ child }}
{% empty %}
	<blockTable colWidths="{{currentIndent}},100%" alignment="left" style="objectTable">
	<tr>
		<td></td>
	    <td><para>(No items recorded)</para></td>
	</tr>
	</blockTable>
{% endfor %}

{% endautoescape %}